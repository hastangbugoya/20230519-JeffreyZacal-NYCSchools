<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_margin="4dp"
    android:padding="2dp"
    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/school_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        >
        <TextView
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="School Name"
            android:textSize="24sp"
            android:fontFamily="@font/gothamic"
            android:textColor="@color/mycolor2"
            android:layout_marginBottom="2dp"
            android:background="@color/mycolor1"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/school_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/school_name"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="School Address"
            android:textSize="18sp"
            android:textColor="@color/mycolor2"
            android:layout_marginBottom="2dp"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/school_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/school_address"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:textColor="@color/mycolor2"
            tools:text="eMail Address"
            android:padding="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>